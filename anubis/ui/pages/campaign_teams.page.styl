.page--campaign_teams

  for key, value in $badge-grade-color
    .badge--{key}
      display: inline-block
      font-size: rem(12px)
      padding: rem(3px 4px)
      line-height: 1
      background-color: value !important
      color: white !important
      
      +mobile()
        display: none

  .campaign-teams
    .col--checkbox
      width: 5%

    .col--id
      width: rem(50px)
      text-align: right

      +mobile()
        display: none

    .col--name
      width: 35%
      border-left: 1px solid #EEE
      border-right: 1px solid #EEE

    .col--member
      text-align: center