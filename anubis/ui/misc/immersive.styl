.layout--immersive
  #panel
    background: no-repeat
    background-size: 1920px 1080px
    background-size: cover
    +retina()
      //background-image: url('immersive-background@2x.jpg')

.panel__background
  position: absolute
  width: 100%
  height: 100%
  z-index: -1

.immersive--content
  color: $immersive-text-color

  h1, h2, h3, h4, h5, h6
    color: $immersive-header-color

+above(rupture.mobile-cutoff)
  .immersive--center
    width: 200px
    margin: 0 auto

.immersive--center
  h1
    text-align: center
    margin: 2em 0
